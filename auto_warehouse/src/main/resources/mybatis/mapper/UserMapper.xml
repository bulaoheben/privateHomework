<!--    </select>-->
<!--    <select id = "allUser" resultType="com.example.auto_warehouse.bean.User">-->
<!--        select * from auto_warehouseDB.user-->
<!--    </select>-->
    <insert id = "createAccount" parameterType="com.example.auto_warehouse.bean.User">
        insert into shippingsystem.account (id,username,password,phone,email)
        values(#{id},#{username},#{password},#{phone},#{email})
    </insert>

